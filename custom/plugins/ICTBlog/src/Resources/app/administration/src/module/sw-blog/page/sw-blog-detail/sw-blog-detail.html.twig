<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_blog_detail %}
    <sw-page class="sw-blog-detail">

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_blog_detail_header %}
            <template #smart-bar-header>
                <h2>{{ placeholder(blog, 'name', $tc('sw-blog.detail.textHeadline')) }}</h2>
            </template>

        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        <!-- Action Bar-->
        {% block sw_blog_detail_actions %}
            <template #smart-bar-actions>

                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                {% block sw_blog_detail_actions_abort %}
                    <sw-button
                        v-tooltip.bottom="tooltipCancel"
                        :disabled="blogIsLoading"
                        @click="onCancel"
                    >
                        {{ $tc('sw-blog.detail.buttonCancel') }}
                    </sw-button>
                {% endblock %}

                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                {% block sw_blog_detail_actions_save %}
                    <sw-button-process
                        v-model="isSaveSuccessful"
                        v-tooltip.bottom="tooltipSave"
                        class="sw-blog-detail__save-action"
                        :is-loading="isLoading"
                        :disabled="isLoading || !acl.can('blog.editor')"
                        variant="primary"
                        @click.prevent="onSave"
                    >
                        {{ $tc('sw-blog.detail.buttonSave') }}
                    </sw-button-process>
                {% endblock %}

            </template>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        <!-- Language selection -->
        {% block sw_blog_detail_language_switch %}
            <template #language-switch>
                <sw-language-switch
                    :disabled="blogId == null"
                    :save-changes-function="saveOnLanguageChange"
                    :abort-change-function="abortOnLanguageChange"
                    @on-change="onChangeLanguage"
                />
            </template>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_blog_detail_content %}
            <sw-card-view slot="content">
                <template v-if="blogIsLoading">
                    <sw-skeleton variant="detail-bold" />
                    <sw-skeleton />
                </template>

                <template v-else>

                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_blog_detail_content_language_info %}
                        <sw-language-info
                            :entity-description="placeholder(blog, 'name', $tc('sw-blog.detail.textHeadline'))"
                        />
                    {% endblock %}

                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    <!-- Add/Edit Form -->
                    {% block sw_blog_detail_base_basic_info_card %}
                        <sw-card
                            position-identifier="sw-blog-detail-basic-info"
                            :title="$tc('sw-blog.detail.cardTitleBlogInfo')"
                        >
                            <sw-container
                                class="sw-blog-detail__container"
                                columns="repeat(auto-fit, minmax(250px, 1fr))"
                                gap="0 30px"
                            >
                                <div class="sw-blog-detail__base-info-wrapper">

                                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                                    <!-- Name field -->
                                    {% block sw_blog_detail_base_info_field_name %}
                                        <sw-field
                                            v-model="blog.name"
                                            type="text"
                                            :label="$tc('sw-blog.detail.labelName')"
                                            :placeholder="placeholder(blog, 'name', $tc('sw-blog.detail.placeholderName'))"
                                            name="name"
                                            validation="required"
                                            required
                                            :error="blogNameError"
                                            :disabled="!acl.can('blog.editor')"
                                        />
                                    {% endblock %}
                                </div>
                                <!-- Author field -->
                                {% block sw_blog_detail_base_info_field_author %}
                                    <sw-field
                                        v-model="blog.author"
                                        type="text"
                                        :label="$tc('sw-blog.detail.labelAuthor')"
                                        :placeholder="placeholder(blog, 'author', $tc('sw-blog.detail.placeholderAuthor'))"
                                        name="author"
                                        validation="required"
                                        required
                                        :error="blogAuthorError"
                                        :disabled="!acl.can('blog.editor')"
                                    />
                                {% endblock %}

                                <!-- Release Date field -->
                                {% block sw_blog_detail_base_info_field_release_date %}
                                    <sw-field
                                        v-model="blog.releaseDate"
                                        type="date"
                                        :label="$tc('sw-blog.detail.labelReleaseDate')"
                                        :placeholder="placeholder(blog, 'releaseDate', $tc('sw-blog.detail.placeholderReleaseDate'))"
                                        name="releaseDate"
                                        validation="required"
                                        required
                                        :error="blogReleaseDateError"
                                        :disabled="!acl.can('blog.editor')"
                                    />
                                {% endblock %}

                                <!-- Active field -->
                                {% block sw_blog_detail_base_info_field_active %}
                                    <sw-switch-field
                                        v-model="blog.active"
                                        :label="$tc('sw-blog.detail.labelActive')"
                                    />
                                {% endblock %}
                            </sw-container>

                            <!-- Category selection (Multiple) -->
                            {% block sw_blog_detail_base_info_field_category %}
                                <sw-entity-multi-select
                                    class="sw-blog-form_product-select"
                                    entity="ict_blog_category"
                                    :entity-collection="blogCategories"
                                    :label="$tc('sw-blog.detail.labelCategory')"
                                    :placeholder="$tc('sw-blog.detail.placeholderCategory')"
                                    @change="setCategoryIds"
                                    show-clearable-button
                                />
                            {% endblock %}

                            <!-- Product selection (Multiple) -->
                            {% block sw_blog_detail_base_info_field_product %}
                                <sw-entity-multi-select
                                    class="sw-blog-form_product-select"
                                    entity="product"
                                    :entity-collection="blogProducts"
                                    :label="$tc('sw-blog.detail.labelProduct')"
                                    :placeholder="$tc('sw-blog.detail.placeholderProduct')"
                                    @change="setProductIds"
                                    show-clearable-button
                                />
                            {% endblock %}

                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            <!-- Description field -->
                            {% block sw_blog_detail_base_info_field_description %}
                                <sw-text-editor
                                    v-model="blog.description"
                                    :label="$tc('sw-blog.detail.labelDescription')"
                                    :placeholder="placeholder(blog, 'description', $tc('sw-blog.detail.placeholderDescription'))"
                                    name="description"
                                    sanitize-input
                                    sanitize-field-name="ict_blog_translation.description"
                                    :disabled="!acl.can('blog.editor')"
                                />
                            {% endblock %}
                        </sw-card>
                    {% endblock %}
                </template>
            </sw-card-view>
        {% endblock %}

    </sw-page>
{% endblock %}
