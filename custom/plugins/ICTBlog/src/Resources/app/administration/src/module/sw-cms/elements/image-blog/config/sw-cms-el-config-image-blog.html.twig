<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_cms_element_image_blog_config %}
    <div class="sw-cms-el-config-image-blog">
        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_cms_element_image_blog_config_media_upload %}
            <sw-cms-mapping-field
                v-model="element.config.media"
                :label="$tc('sw-cms-text-blog.elements.image-blog.label')"
                value-types="entity"
                entity="media"
            >
                <sw-media-upload-v2
                    variant="regular"
                    :upload-tag="uploadTag"
                    :source="previewSource"
                    :allow-multi-select="false"
                    :default-folder="cmsPageState.pageEntityName"
                    :caption="$tc('sw-cms-text-blog.elements.general.config.caption.mediaUpload')"
                    @media-upload-sidebar-open="onOpenMediaModal"
                    @media-upload-remove-image="onImageRemove"
                />

                <div
                    slot="preview"
                    slot-scope="{ demoValue }"
                    class="sw-cms-el-config-image-blog__mapping-preview"
                >
                    <img
                        v-if="demoValue.url"
                        :src="demoValue.url"
                        alt=""
                    >
                    <sw-alert
                        v-else
                        class="sw-cms-el-config-image-blog__preview-info"
                        variant="info"
                    >
                        {{ $tc('sw-cms-text-blog.detail.label.mappingEmptyPreview') }}
                    </sw-alert>
                </div>
            </sw-cms-mapping-field>

            <sw-upload-listener
                :upload-tag="uploadTag"
                auto-upload
                @media-upload-finish="onImageUpload"
            />
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_cms_element_image_blog_config_display_mode %}
            <sw-select-field
                v-model="element.config.displayMode.value"
                class="sw-cms-el-config-image-blog__display-mode"
                :label="$tc('sw-cms-text-blog.elements.general.config.label.displayMode')"
                @change="onChangeDisplayMode"
            >
                <option value="standard">
                    {{ $tc('sw-cms-text-blog.elements.general.config.label.displayModeStandard') }}
                </option>
                <option value="cover">
                    {{ $tc('sw-cms-text-blog.elements.general.config.label.displayModeCover') }}
                </option>
                <option value="stretch">
                    {{ $tc('sw-cms-text-blog.elements.general.config.label.displayModeStretch') }}
                </option>
            </sw-select-field>
        {% endblock %}

        <template v-if="element.config.displayMode.value === 'cover'">
            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
            {% block sw_cms_element_image_blog_config_min_height %}
                <sw-text-field
                    v-model="element.config.minHeight.value"
                    :label="$tc('sw-cms-text-blog.elements.image-blog.config.label.minHeight')"
                    :placeholder="$tc('sw-cms.elements.image.config.placeholder.enterMinHeight')"
                    @input="onChangeMinHeight"
                />
            {% endblock %}
        </template>

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_cms_element_image_blog_config_vertical_align %}
            <sw-select-field
                v-model="element.config.verticalAlign.value"
                :label="$tc('sw-cms-text-blog.elements.general.config.label.verticalAlign')"
                :placeholder="$tc('sw-cms-text-blog.elements.general.config.label.verticalAlign')"
                :disabled="element.config.displayMode.value === 'cover'"
            >
                <option value="flex-start">
                    {{ $tc('sw-cms-text-blog.elements.general.config.label.verticalAlignTop') }}
                </option>
                <option value="center">
                    {{ $tc('sw-cms-text-blog.elements.general.config.label.verticalAlignCenter') }}
                </option>
                <option value="flex-end">
                    {{ $tc('sw-cms-text-blog.elements.general.config.label.verticalAlignBottom') }}
                </option>
            </sw-select-field>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_cms_element_image_blog_config_link %}
            <div class="sw-cms-el-config-image-blog__link">
                <sw-dynamic-url-field
                    v-model="element.config.url.value"
                />
                <sw-field
                    v-model="element.config.newTab.value"
                    class="sw-cms-el-config-image-blog__link-tab"
                    type="switch"
                    :label="$tc('sw-cms-text-blog.elements.image-blog.config.label.linkNewTab')"
                />
            </div>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_cms_element_image_blog_config_media_modal %}
            <sw-media-modal-v2
                v-if="mediaModalIsOpen"
                variant="regular"
                :caption="$tc('sw-cms-text-blog.elements.general.config.caption.mediaUpload')"
                :entity-context="cmsPageState.entityName"
                :allow-multi-select="false"
                :initial-folder-id="cmsPageState.defaultMediaFolderId"
                @media-upload-remove-image="onImageRemove"
                @media-modal-selection-change="onSelectionChanges"
                @modal-close="onCloseModal"
            />
        {% endblock %}
    </div>
{% endblock %}
