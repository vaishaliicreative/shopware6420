{% block sw_cms_element_custom_product_video_description %}
    <div
        class="sw-cms-el-custom-product-video-description"
    >
        {% block sw_cms_element_custom_product_video_description_detail %}
            <div
                v-if="!isProductPageType || currentDemoEntity"
                class="sw-cms-el-product-description-reviews__detail"
            >
                <h3 class="sw-cms-el-custom-product-video-description__detail-title">
                    {{ placeholder(product, 'name', product.name) }}
                </h3>
                <div class="sw-cms-el-custom-product-video-description__detail-description">
                    {{ placeholder(product, 'customFields.custom_product_video_description_video_description_first', product.customFields.custom_product_video_description_video_description_first) }}
                </div>
            </div>
        {% endblock %}
    </div>
{% endblock %}
